#include<stdio.h>
#include<stdlib.h>
 
int s[50], j, res[50];

 
void dfs(int u, int n, int a[][]) {
 
    int v;
    s[u] = 1;
    for (v = 0; v < n - 1; v++) {
        if (a[u][v] == 1 && s[v] == 0) {
            dfs(v, n, a);
        }
    }
    j += 1;
    res[j] = u;
}
 
void topological_order(int n, int a[][]) {
 
    int i, u;
    for (i = 0; i < n; i++) {
        s[i] = 0;
    }
    j = 0;
    for (u = 0; u < n; u++) {
        if (s[u] == 0) {
            dfs(u, n, a);
        }
    }
    return;
}
int main() {
    int a[50][50], n, i, j;
 
    printf("Enter number of vertices\n");
    scanf("%d", &n);
    printf("\t\tEnter the adjacency matrix\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("\t%d", a[i][j]);
        }
        printf("\n");
    }
    printf("\nTopological order:\n");
 
    topological_order(n, a);
 
    for (i = n; i >= 1; i--) {
        printf("-->%d", res[i]);
    }
    return 0;
}
